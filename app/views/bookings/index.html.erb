<div class="main-container">
  <div class="container">
    <% @services.each do |service| %>
      <div class="row" value="#{service.name}">
        <% service.bookings.each do |booking| %>
          <div class="col-xs-6">
            <div class="card-booking">
              <%= booking.user.first_name %>
              <%= booking.date %>
              <%= booking.service %>
            </div>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
  <div
    id="map"
    style="width: 100%;
    height: 600px;"
    data-markers="<%= @markers.to_json %>"
  ></div>
</div>
